{
  "name": "fast-storybook",
  "version": "1.0.0",
  "description": "Storybook Support for FAST Components",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.1",
    "@types/cross-spawn": "^6.0.2",
    "@types/webpack-env": "^1.18.5",
    "@types/node": "^20.0.0",
    "concurrently": "^9.0.1",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "@types/react": ">=16"
  },
  "workspaces": [
    "packages/frameworks/fast-components-vite",
    "packages/frameworks/fast-components-webpack5",
    "packages/renderers/fast-components"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "watch": "concurrently \"npm:watch:*\"",
    "watch:renderer": "npm run watch --workspace=@fast-sb/storybook-fast-components",
    "watch:frameworks-vite": "npm run watch --workspace=@fast-sb/storybook-fast-components-vite",
    "watch:frameworks-webpack5": "npm run watch --workspace=@fast-sb/storybook-fast-components-webpack5"
  }
}